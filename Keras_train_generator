train_datagen = ImageDataGenerator(rescale=1./255,rotation_range=10,
                                   width_shift_range=0.2,
                                   height_shift_range=0.2,
                                   horizontal_flip=True,
                                   vertical_flip=True,
                                   fill_mode='nearest')
validation_datagen = ImageDataGenerator(rescale=1./255)
test_datagen = ImageDataGenerator(rescale=1./255)

train_generator = train_datagen.flow_from_directory(train_dir, target_size=(450,450), batch_size=30, class_mode='binary',classes=['all','hem'])
validation_generator = validation_datagen.flow_from_directory(validation_dir, target_size=(450,450),batch_size=30, class_mode='binary',classes=['all','hem'])
test_generator = test_datagen.flow_from_directory(test_dir, target_size=(450,450), batch_size = 30, class_mode='binary',classes=['all','hem'])



checkpointer = ModelCheckpoint(date+'Grandchallenge.h5', verbose=1, save_best_only=True)
hist = model.fit_generator(train_generator,steps_per_epoch=80,epochs=50,validation_data=test_generator,validation_steps=30, callbacks=[checkpointer])
